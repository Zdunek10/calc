<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numberText"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_weight="1"
        android:autoText="true"
        android:background="@color/backgroundGray"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="bottom|right"
        android:inputType="textPersonName"
        android:paddingRight="8pt"
        android:text="0"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="45sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="140pt"
        android:layout_weight="0">
        android:layout_weight="1"

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/butAc"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butPlusMinus"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butProc"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butDevide"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:onClick="buOperEvent"
                android:text="/"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/but7"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/but8"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/but9"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butMultiply"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:onClick="buOperEvent"
                android:text="X"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="84dp">

            <Button
                android:id="@+id/but4"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/but5"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/but6"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butMInus"
                android:layout_width="30pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:onClick="buOperEvent"
                android:text="-"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="122dp">

            <Button
                android:id="@+id/but1"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:text="1"
                android:textSize="18sp"
                android:onClick="butNumberEvent" />

            <Button
                android:id="@+id/but2"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/but3"
                android:layout_width="35pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/whiteGray"
                android:onClick="butNumberEvent"
                android:text="3" />

            <Button
                android:id="@+id/butPlus"
                android:layout_width="35pt"
                android:layout_height="35pt"
                android:layout_weight="1"
                android:background="@color/colorOrange"
                android:onClick="buOperEvent"
                android:text="+"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="35pt"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/but0"
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:layout_weight="1"
            android:background="@color/whiteGray"
            android:onClick="butNumberEvent"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/butDot"
            android:layout_width="103dp"
            android:layout_height="35pt"
            android:layout_weight="0"
            android:background="@color/whiteGray"
            android:onClick="butNumberEvent"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/butEqual"
            android:layout_width="103dp"
            android:layout_height="35pt"
            android:layout_weight="0"
            android:background="@color/colorOrange"
            android:onClick="butEqualEvent"
            android:text="="
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>